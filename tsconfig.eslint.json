{
  // extend your base config to share compilerOptions, etc
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ensure that nobody can accidentally use this config for a build
    "noEmit": true,
    "allowJs": true,
  },
  "include": [
    // whatever paths you intend to lint
    "eslint.config.js",
    "vite.config.ts",
    "postcss.config.cjs",
    "kubb.config.ts",
    "src",
    ".storybook/**/*",
    "test-utils",
  ],
}